<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="50dp">

        <!-- Các hình chữ nhật được sắp xếp theo RelativeLayout -->

        <View
                android:id="@+id/rect1"
                android:layout_width="148dp"
                android:layout_height="373dp"
                android:background="@color/design_default_color_primary"/>

        <View
                android:id="@+id/rect2"
                android:layout_width="148dp"
                android:layout_height="356dp"
                android:layout_below="@id/rect1"
                android:background="@color/design_default_color_secondary"/>

        <View
                android:id="@+id/rect3"
                android:layout_width="263dp"
                android:layout_height="234dp"
                android:layout_toRightOf="@id/rect1"
                android:background="#FF0000"/>

        <View
                android:id="@+id/rect4"
                android:layout_width="263dp"
                android:layout_height="233dp"
                android:layout_below="@id/rect3"
                android:layout_toRightOf="@id/rect1"
                android:background="#00FF00" android:layout_marginTop="2dp"/>

        <View
                android:id="@+id/rect5"
                android:layout_width="263dp"
                android:layout_height="262dp"
                android:layout_toRightOf="@id/rect1"
                android:layout_below="@id/rect4"
                android:background="#0000FF"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>